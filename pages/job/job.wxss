.ele-container {
    z-index:1;
    width:100%;
    clear:both;    
}
.element {
    display: flex;
    position:relative;
    /* flex-direction:column; */
    /* align-items: center; */
    padding:20rpx 20rpx;
    box-sizing: border-box;
    width:100%;
    /* overflow: hidden; */
    /* height:128px; */
    z-index:1;
    border-color:#222222;
    background-color:rgb(255, 255, 255);
}
.element .element_picture {
    display: inline-table;
    opacity:1;
    background-color:transparent;
    height:200rpx;
    width:200rpx;
}
.element .element_picture image {
    width: 100%;
    height: 100%;
    /* 继承父类边框样式 */
    border-radius:inherit; 
}
.element_right {
    display:flex;
    flex-direction:column;
    flex: 1;
    position: relative;
    height:200rpx;
    width:200rpx;
    padding: 0;
    margin:0 20rpx;
}

.element_right .element_name {
    position: relative;
    font-size:17px;
    font-weight:bold;
    height:22px;
    padding: 0;
    margin:0;
}
.element_right .element_detail {
    position: relative;
    float: left;
    margin: 8rpx 0;
    font-size:13px;
    padding: 0;
}

.element_right .element_right__ft {
    display: flex;
    float: left;
    padding: 0;
    margin:10rpx 0;
}
.element_right .element_right__ft .element_rice {
    flex:1;
    font-size: 15px; 
    color: red;   
}
.element_right .element_right__ft .button {
    margin: 0;
    margin-right: 15rpx;
    padding: 0;
    /* padding-left:auto; */
    width: 150rpx;
    height: 70rpx;
    line-height: 70rpx;
    color:rgb(255, 255, 255);
    background-color:rgb(29, 241, 170);
    font-size:15px;
    text-align:center;
}