/* pages/pages1/pages1.wxss */
.page-header {
    display: flex;
    /* 横向居中对齐 */
    background-color:#ddd9bd;
    justify-content: center;
    border-bottom: 2rpx solid #ccc;
    margin-bottom: 10rpx;
  }

  .page-header-text {
    padding: 20rpx 40rpx;
    color:#999;
    font-size:40rpx;
    text-align: center;  
  }

  .page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
  }

  .item {
    display: flex;
    padding: 20rpx 40rpx;
    /* solid 定义实线 */
    border-bottom: 2rpx solid #eee;
  }